function SliderViewCreation(e,t,i,a,n,r){var o="10",s=Ti.UI.createView({width:"750",height:"43",left:"41",bottom:o}),l=Ti.UI.createLabel({left:"0",bottom:o,font:{fontSize:20,fontFamily:Ti.App.Properties.getString("fontFamily")},text:"Page"});s.add(l);var d=Ti.UI.createLabel({left:"55",bottom:o,font:{fontSize:18,fontFamily:Ti.App.Properties.getString("fontFamily")},text:0!=t?1:0,color:"#fff"});s.add(d);var u=Ti.UI.createLabel({left:"80",bottom:o,font:{fontSize:18,fontFamily:Ti.App.Properties.getString("fontFamily")},text:"of"});s.add(u);var c=Ti.UI.createLabel({left:"100",bottom:o,font:{fontSize:18,fontFamily:Ti.App.Properties.getString("fontFamily")},text:i,color:"#fff"});s.add(c);var f,p=Titanium.UI.createSlider({min:1,max:i,left:"134",focusable:!0,width:"613",height:"18",bottom:"6",touchEnabled:!0});p.addEventListener("stop",function(e){var t=String.format("%3.1f",e.value);f=Math.round(t),r.scrollToView(f-1),d.setText(f)}),s.add(p),r.addEventListener("scrollend",function(e){d.setText(e.currentPage+1),p.setValue(e.currentPage+1)});pageflip.currentPage;return e.add(s),s}module.exports=SliderViewCreation;