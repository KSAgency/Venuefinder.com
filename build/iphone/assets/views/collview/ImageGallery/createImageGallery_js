function createImageGallery(e,t,i){var a=Titanium.UI.createWindow({backgroundColor:"rgba(0,0,0,0.8)"}),n=Titanium.UI.createButton({right:"35",top:"80",height:"20",zIndex:1,title:"X",color:"#FFF",font:{fontSize:"28",fontWeight:"bold"}});a.add(n),n.addEventListener("click",function(){a.close()}),"Android"!=Ti.App.Properties.getString("osname")&&(a.orientationModes=[Titanium.UI.LANDSCAPE_LEFT,Titanium.UI.LANDSCAPE_RIGHT],a.setOrientation(Titanium.UI.LANDSCAPE_LEFT));for(var r=Ti.UI.createScrollView({maxZoomScale:100,minZoomScale:1,verticalBounce:!1,layout:"horizontal",contentWidth:Ti.UI.SIZE,contentHeight:"60%",width:Ti.UI.FILL,height:"60%",top:"20%"}),o=0;o<t.length;o++){var s=Titanium.UI.createImageView({image:t[o],width:720,top:0,left:25,height:"auto",defaultImage:"/images/icon.png"});r.add(s)}a.add(r),a.open();var l=i*(s.width+s.left);r.scrollTo(l-150,0)}module.exports=createImageGallery;