function facilitiesTab(e,t,i,n){var a=!0,r=!0;if(Ti.Network.online){var s=require("/builders/databaseFunctions/createDatabase"),o=s("/venuefinder.db","venuefinder"),l=o.execute('SELECT * FROM Venue WHERE VenueID="'+n+'"'),d=l.fieldByName("VenueName"),c=l.fieldByName("Town"),u=l.fieldByName("Country");if(""!=c&&null!=c)var c=c+", ";else var c="";if(""!=f&&null!=f)var f=f+", ";else var f="";var d=Titanium.UI.createLabel({text:d,left:"5%",top:"20pts",width:"90%",ellipsize:!0,color:"#2195be",font:{fontSize:"18pts",fontWeight:"bold"}});i.add(d);var p=Titanium.UI.createLabel({text:c+u,left:"5%",width:"90%",top:"1pts",ellipsize:!0,color:"#A2BE1C",font:{fontSize:"16pts"}});i.add(p);var g=Ti.Network.createHTTPClient();g.open("GET","http://venuefindermobile.live.x-rm.com/webapi-v1/api/venue/"+n+"/leisurefacilities"),g.setRequestHeader("Accept","application/xml"),g.onload=function(){try{var e=this.responseXML.documentElement,t=e.getElementsByTagName("LeisureFacility");if(0==t.length)a=!1;else{var n=Titanium.UI.createLabel({text:"Leisure Facilities",color:"#2195be",font:{fontSize:"16pts",fontFamily:"Arial",fontWeight:"bold"},top:"10pts",left:"5%"});i.add(n);for(var r=0;r<t.length;r++){var s=t.item(r),o=s.getElementsByTagName("Description").item(0).text,l=(s.getElementsByTagName("ID").item(0).text,s.getElementsByTagName("Nearby").item(0).text,s.getElementsByTagName("OnSite").item(0).text,Titanium.UI.createLabel({text:o,color:"#666",font:{fontSize:"16pts",fontFamily:"Arial"},top:"0pts",left:"5%"}));i.add(l)}}}catch(d){alert(d)}},g.send();var m=Ti.Network.createHTTPClient();m.open("GET","http://venuefindermobile.live.x-rm.com/webapi-v1/api/venue/"+n+"/hotelfacilities"),m.setRequestHeader("Accept","application/xml"),m.onload=function(){try{var e=this.responseXML.documentElement,t=e.getElementsByTagName("HotelFacility");if(0==t.length)r=!1;else{var n=Titanium.UI.createLabel({text:"Venue Facilities",color:"#2195be",font:{fontSize:"16pts",fontFamily:"Arial",fontWeight:"bold"},top:"10pts",left:"5%"});i.add(n);for(var s=0;s<t.length;s++){var o=t.item(s),l=o.getElementsByTagName("Name").item(0).text,c=Titanium.UI.createLabel({text:l,color:"#666",font:{fontSize:"16pts",fontFamily:"Arial"},top:"0pts",left:"5%"});i.add(c)}}if(0==r&&0==a){i.removeAllChildren(),i.add(d),i.add(p);var u=Titanium.UI.createLabel({text:"Sorry, we could not find any facilities information for this venue",color:"#666",font:{fontSize:"16pts",fontFamily:"Arial"},top:"10pts",left:"5%",width:"905"});i.add(u)}}catch(f){alert(f)}},m.send()}else tab4.setBackgroundImage("/images/venue_facilities_ns.png")}module.exports=facilitiesTab;