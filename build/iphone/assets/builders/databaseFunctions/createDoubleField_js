function createDoubleField(e,t,i,a){if(null==i){i="40%";var o="58%"}else var o="38%";a=a?Ti.UI.KEYBOARD_NUMBERS_PUNCTUATION:Ti.UI.KEYBOARD_DEFAULT;var n=Titanium.UI.createTableViewRow({height:"45",color:"#399ad4",backgroundColor:"#f7f7f7"}),r=Titanium.UI.createTextField({color:"#399ad4",tintColor:"#399ad4",zIndex:5,backgroundColor:"#f7f7f7",font:{fontFamily:"Arial",fontSize:"14"},width:o,left:i,hintText:t,borderStyle:Titanium.UI.INPUT_BORDERSTYLE_NONE,height:"43",clearButtonMode:Titanium.UI.INPUT_BUTTONMODE_ALWAYS,returnKeyType:Titanium.UI.RETURNKEY_DONE,keyboardType:a,autocapitalization:Ti.UI.TEXT_AUTOCAPITALIZATION_NONE,bubbleParent:!1});"Android"==Ti.App.Properties.getString("osname")&&r.setSoftKeyboardOnFocus(Ti.UI.Android.SOFT_KEYBOARD_SHOW_ON_FOCUS),r.addEventListener("focus",function(){setTimeout(function(){r.focus()},500)}),"iPad"==Ti.App.Properties.getString("osname")&&(r.setLeft("40%"),r.setWidth("58%"));var l=Titanium.UI.createLabel({text:e,left:5,color:"#399ad4",backgroundColor:"#f7f7f7",font:{fontFamily:"Arial",fontSize:"14",fontWeight:"Bold"},zIndex:10});return"Android"!=Ti.App.Properties.getString("osname")&&l.setLeft(15),n.add(l),n.add(r),n.addEventListener("click",function(){r.focus()}),[n,r]}module.exports=createDoubleField;